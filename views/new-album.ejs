<!DOCTYPE html>
<html lang="fr">

<head>
    <%- include('partials/head') %>
</head>

<body>
    <%- include('partials/nav') %>
    <main>
        <article class="container">
            <div class="row mt-4">
                <div class="col">
                    <h2>Création d'un nouvel album</h2>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <form method="POST" action="/albums/create">
                        <div class="form-group">
                            <label class="form-label" for="albumTitle">Titre</label>
                            <input class="form-control" type="text" name="albumTitle" placeholder="Inscrivez le titre de votre nouvel album" autofocus>
                        </div>
                        <% if (errors.length) { %>
                            <div class="alert alert-danger mt-4 mb-2" role="alert">
                                <%= errors[0] %> 
                            </div>
                        <% } %>  
                        <button class="btn btn-primary mt-4" type="submit">Créer</button>
                    </form>
                </div>
            </div>
        </article>
    </main>
    <%- include('partials/footer') %>
    <%- include('partials/scripts') %>
</body>

</html>