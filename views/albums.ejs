<!DOCTYPE html>
<html lang="fr">

<head>
    <%- include('partials/head') %>
</head>

<body>
    <%- include('partials/nav') %>
        <main>
            <article class="container">
                <div class="row mt-4">
                    <div class="col">
                        <h2>Les albums</h2>
                        <a class="btn btn-primary mt-2 mb-4" href="/albums/create">
                            Nouvel album
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col col-xs-12 col-sm-4">
                        <ul class="list-group">
                            <% albums.forEach((album) => {%> 
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <a href="#"><%= album.title %> </a>
                                    <a class="link-light badge bg-danger rounded-pill" href="#">Supprimer</a>
                                </li>
                            <% }) %> 
                        </ul>
                    </div>
                </div>
            </article>
        </main>
    <%- include('partials/scripts') %>
</body>

</html>