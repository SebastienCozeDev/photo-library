<!DOCTYPE html>
<html lang="fr">

<head>
    <%- include('partials/head') %>
</head>

<body>
    <%- include('partials/nav') %>
    <main>
        <article class="container">
            <div class="row mt-4">
                <div class="col">
                    <a class="mb-4" href="/albums">&lt; Retour</a>
                    <h2 class="mb-4"><%= album.title %> </h2>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Ajouter une image</h5>
                            <form class="form-inline" method="POST" action="/albums/<%= album._id %> " enctype="multipart/form-data">
                                <input class="form-control-file" name="image" type="file">
                                <button class="btn btn-primary mt-3" type="submit">Ajouter</button>
                            </form>
                            <% if (errors.length) { %>
                                <div class="alert alert-danger mt-4 mb-2" role="alert">
                                    <%= errors[0] %> 
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
            <br>
            <div class="row row-cols-1 row-cols-md-4 g-4">
                <% album.images.forEach((image, idx) => { %>
                    <div class="col">
                        <div class="card">
                            <img class="card-img-top" src="/uploads/<%= album._id %>/<%= image %> " alt="<%= image %>">
                            <div class="card-body">
                                <h5><%= image %></h5>
                                <a href="/albums/<%= album._id %>/delete/<%= idx %>">Supprimer</a>
                            </div>
                        </div>
                    </div>
                <% }) %>  
            </div>
        </article>
    </main>
    <%- include('partials/scripts') %>
</body>

</html>